<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/assets/Semantic/semantic.min.css">
        <link rel="stylesheet" href="/assets/app.css">
        <title><%= title %></title>
    </head>
    <body>
        <div style="margin-top:8px;" class="ui raised very padded text  container segment">
            <h2 class="ui header">
                La météo de 
                <i class="CA flag"></i><%= name %> 
                <i class="<%- country %> flag"></i><%= country %> 
                Lat: <%- lat %> ; Long: <%- long %>
            </h2>
            <table class="ui fixed single line celled table">
                    <thead>
                      <tr>
                          <th>Température min-max</th>
                          <th>Ciel</th>
                          <th>Date et heure</th>
                    </tr></thead>
                    <tbody>
                    <% if(typeof weather === 'undefined') { %>
                        <%= weather.message %>
                    <% } else { %>
                        <% for(var i=0; i < min.length; i++) { %>
                    
                              <tr>
                                <td>
                                    <div class="item">
                                        <i class="thermometer half icon"></i>
                                        <div class="content">
                                          <strong> <%= min[i] %>°C </strong> - <strong> <%= max[i] %>°C </strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="item">
                                        <div class="content">
                                            <img src="http://openweathermap.org/img/w/<%- icon[i]%>.png" alt="<%- icon[i]%>">   <%= main[i] %> 
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="item">
                                        <i class="wait icon"></i>
                                        <div class="content">
                                            <%= time[i] %> 
                                        </div>
                                    </div>
                                </td>
                              </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div style="margin-top:8px;" class="ui raised very padded text container segment">
            <div class="ui equal width center aligned padded grid">
                <div class="row">
                  <div class="blue-sky column">
                    <a href="/"><i class="icon home"></i>Home</a>
                  </div>
                  <div class="column">
                    <a href="/about"><i class="info circle icon"></i>About</a>
                  </div>
                </div>
            </div>
        </div>
    </body>
</html>